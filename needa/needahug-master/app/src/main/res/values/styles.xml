<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">right</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

    <style name="menu">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:src">@drawable/button</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="standardSize">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="scroll">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
    </style>

    <style name="relativeLayout" parent="standardSize">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/activity_vertical_padding</item>
    </style>

    <style name="Button" parent="@style/standardSize">
        <item name="android:background">@drawable/button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/font_smaller</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="hugText" parent="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingBottom">@dimen/padding_smaller</item>
        <item name="android:paddingTop">@dimen/padding_smaller</item>
    </style>

    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="welcomeText" parent="wrap">
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:paddingBottom">@dimen/padding_smaller</item>
        <item name="android:paddingTop">@dimen/activity_vertical_padding</item>
    </style>

    <style name="textField" parent="wrap">
        <item name="android:layout_marginBottom">@dimen/padding_smaller</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="share" parent="standardSize">
        <item name="android:src">@drawable/ic_share_white_48dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_below">@id/hugTextView</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingBottom">@dimen/padding_smaller</item>
        <item name="android:layout_marginBottom">@dimen/padding_smaller</item>
    </style>

    <style name="hiText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/semi_transparent</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:title"></item>
        <item name="android:titleTextColor">@color/semi_transparent</item>
        <item name="popupTheme">@style/menu</item>
    </style>

    <style name="toolbar.edit">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_toRightOf">@id/backButton</item>
    </style>

    <style name="backButton">
        <item name="android:layout_width">@dimen/button_back</item>
        <item name="android:layout_height">@dimen/button_back</item>
        <item name="android:layout_marginTop">@dimen/button_margin</item>
        <item name="android:alpha">.6</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/ic_chevron_left_white_48dp</item>
    </style>

    <style name="boom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">@dimen/boom_top</item>
        <item name="bmb_buttonEnum">simpleCircle</item>
        <item name="bmb_boomEnum">boomLine</item>
        <item name="bmb_buttonPlaceAlignmentEnum">buttonPlaceAlignment_tr</item>
        <item name="bmb_buttonPlaceEnum">buttonPlace_sc_3_2</item>
        <item name="bmb_buttonRightMargin">@dimen/padding_normal</item>
        <item name="bmb_buttonTopMargin">@dimen/padding_boom</item>
        <item name="bmb_buttonVerticalMargin">@dimen/boom_vertical</item>
        <item name="bmb_dimColor">@color/boom_dim</item>
        <item name="bmb_highlightedColor">@color/transparent</item>
        <item name="bmb_normalColor">@color/transparent</item>
        <item name="bmb_piecePlaceEnum">piecePlace_dot_3_4</item>
        <item name="bmb_shadowEffect">false</item>
        <item name="bmb_unableColor">@color/transparent</item>
    </style>

    <style name="newHugText" parent="standardSize">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">@dimen/padding_bigger</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:gravity">top|left</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:lines">3</item>
        <item name="android:maxLines">10</item>
        <item name="android:padding">@dimen/padding_tiny</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/cancel</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="editButton" parent="standardSize">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginTop">@dimen/padding</item>
        <item name="android:textSize">@dimen/font_smaller</item>
        <item name="android:textColor">@color/semi_transparent</item>
    </style>

    <style name="editButton.save">
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_below">@id/newHugText</item>
    </style>

    <style name="editButton.cancel">
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_below">@id/newHugText</item>
        <item name="android:layout_toLeftOf">@id/saveHugButton</item>
    </style>

</resources>
